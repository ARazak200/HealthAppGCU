@{
    ViewData["Title"] = "Home Page";
}
@model HealthcareActivityViewModel 

<div>
    <h5 class="h5" style="margin:8px">@Model.Date.Value.ToShortDateString().TrimEnd(new char[] { '.', 'г'} )</h5>
    <hr />
</div>
<div class="row" style="text-align:center; margin-top:60px">
    <div class="col-3">
        <h2 class="display-3">Calories</h2>
        <br />
        <hr />
        <h3 class="display-4">@(Model.Calories)kcal.</h3>
    </div>
    <div class="col-3">
        <h2 class="display-3">Water Intake</h2>
        <hr />
        <h3 class="display-4">@(Model.WaterIntake)ml.</h3>
    </div>
    <div class="col-3">
        <h2 class="display-3">Weight</h2>
        <br />
        <hr />
        <h3 class="display-4">@(Model.Weight)kg.</h3>
    </div>
    <div class="col-3">
        <h2 class="display-3">Heart Rate</h2>
        <hr />
        <h3 class="display-4">80bpm.</h3>
    </div>
</div>
